<%- include('./partials/header/header.ejs'); %>

  <body>
    <%- include('./partials/navigation/nav.ejs'); %>

    <!--================Home Banner Area =================-->
    <section class="home_banner_area mb-40">
      <img src="/public/img/example.jpg" alt="Banner Image">
        <div class="banner_inner d-flex align-items-center">
          <div class="container">
            <div class="row justify-content-center align-items-center d-flex">
              <div class="col-lg-6">
                <div class="login_form bg-white p-4 rounded">
                    <h3 class="mb-4 text-center p-3">Login</h3>
                    
                    <form action="/doLogin" method="post">
                      <% if(messages.error) {%>
                        <div class="">
                            <h4 class="alert alert-danger" style="text-align: center; color: red;text-transform: uppercase;"> <%= messages.error %></h4>
                        </div>
                      <% } %>
                        <div class="form-group position-relative">
                          <label for="email" class=" form-control-label">Email</label>
                          <input type="email" class="form-control" id="email" name="email" placeholder="Email" required>
                        </div>
                        <div class="form-group position-relative">
                          <label for="password" class=" form-control-label">Password</label>
                          <input type="password" class="form-control" id="password" name="password" placeholder="Password" required>
                        </div>
                        <div class="form-group d-flex justify-content-end ">
                            <div>
                                <a href="/register">Don't have an Account?</a>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-success btn-block mt-20 ">Login</button>
                        <div class="mr-auto mb-20">
                            <a href="/forgot-password" class="text-secondary">Forgot Password?</a>
                        </div>
                    </form>

                </div>
            </div>
            
            </div>
          </div>
        </div>
      </section>
      <!--================End Home Banner Area =================-->

  <%- include('./partials/footer/footer.ejs'); %>
</body>
<%- include('./partials/footer/footer_js.ejs'); %>
