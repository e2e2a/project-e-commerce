<%- include('./partials/header/header.ejs'); %>

<body>
  <%- include('./partials/navigation/nav.ejs'); %>

  <!--================Home Banner Area =================-->
  <section class="banner_area">
    <img src="/public/img/example.jpg" alt="Banner Image">
    <div class="banner_inner d-flex align-items-center">
        <div class="container">
            <div class="banner_content d-md-flex justify-content-center align-items-center">
            </div>
        </div>
    </div>
  </section>
  <!--================End Home Banner Area =================-->

  <!-- ================ contact section start ================= -->
  <section class="section_gap">
    <div class="container">
      <div class="d-sm-block mb-5 pb-4">
        <div class="row">
          <div class="col-12">
            <div class="row">
                <div class="col-12 d-flex justify-content-center align-items-center">
                    <h4>Qr Code</h4>
                </div>
                <div class="col-12 d-flex justify-content-center align-items-center">
                    <img id="qrCodeImage" src="<%= qrCodeDataURL %>" alt="QR Code" style="width: 200px; height: 200px;">
                </div>
                <div class="col-12 d-flex justify-content-center align-items-center">
                    <span>Scan qrcode to for Gcash payment method</span>
                </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Display other content -->
  <%- include('./partials/footer/footer.ejs'); %>

  <!-- Include jQuery (you may need to adjust the path) -->
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

  <script>
    $(document).ready(function () {
      // Function to handle redirection
      function redirectToHelloWorld() {
        // Redirect to 'hello world' page
        window.location.href = '/hello-world'; // Change '/hello-world' to the actual URL you want to redirect to
      }

      // Event listener for QR code scanning
      $('#qrCodeImage').on('click', function () {
        // Call the function to redirect when QR code is clicked (scanned)
        redirectToHelloWorld();
      });
    });
  </script>

</body>
<%- include('./partials/footer/footer_js.ejs'); %>
