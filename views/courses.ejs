<section class="blog-area section-gap mt-40">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-lg-12">
        <div class="main_title">
          <h2><span>Courses</span></h2>
          <p>Bring called seed first of third give itself now ment</p>
        </div>
      </div>
    </div>

    <div class="row">
      <% if(courses.length > 0) {%>
        <% courses.forEach(course=> { %>
      <div class="col-lg-4 col-md-6">
        <div class="single-blog">
          <div class="thumb">
            <img class="img-fluid" src="<%= course.imageURL %>" alt="" style="height: 350px;">
          </div>
          <div class="short_details">
            <a class="d-block">
              <h4><%= course.title %></h4>
            </a>
            <div class="text-wrap">
              <p>
                <%= course.description %>
              </p>
            </div>
            <a href="/course/enroll/<%= course._id %>" class="blog_btn">Enroll Me<span class="ml-2 ti-arrow-right"></span></a>
          </div>
        </div>
      </div>
      <% }) %>
      <% } else{ %>
      <div class="col-12 justify-content-center d-flex">
        <h3 class="align-middle">No Products Available</h3>
      </div>
      <% } %>
    </div>
  </div>
</section>
