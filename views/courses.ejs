<%- include('./partials/header/header.ejs'); %>

  <body>
    <%- include('./partials/navigation/nav.ejs'); %>

    <!--================Home Banner Area =================-->
    <section class="banner_area">
      <div class="banner_inner d-flex align-items-center">
        <div class="container">
          <div class="banner_content d-md-flex justify-content-between align-items-center">
            
          </div>
        </div>
      </div>
    </section>
    <!--================End Home Banner Area =================-->
<!--================ Start Courses Area =================-->
<section class="blog-area section-gap mt-40">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-lg-12 mt-40">
        <div class="main_title">
          <h2><span>Courses</span></h2>
        </div>
      </div>
    </div>
    <div class="product_top_bar d-flex align-items-center mb-40">
      <div class="col-12 col-lg-6 d-flex align-items-center ">
        <label for="search" class=" col-form-label mr-2" style="font-size: 18px;font-weight: 500;">Search</label>
        <input type="text" name="search" class="form-control" id="searchCourseName" class="sorting" placeholder="Search">
      </div>
    </div>
    <div class="row">
      <% if(courses.length > 0) {%>
        <% courses.forEach(course=> { %>
      <div class="col-lg-4 col-md-6" id="courseToDisplay">
        <div class="single-blog">
          <div class="thumb">
            <img class="img-fluid" src="<%= course.imageURL %>" alt="" style="height: 350px;">
          </div>
          <div class="short_details">
            <a class="d-block">
              <h4><%= course.title %></h4>
            </a>
            <div class="text-wrap">
              <p>
                <%= course.description %>
              </p>
            </div>
            <a href="/course/enroll/<%= course._id %>" class="blog_btn">Enroll Me<span class="ml-2 ti-arrow-right"></span></a>
          </div>
        </div>
      </div>
      <% }) %>
      <% } else{ %>
      <div class="col-12 justify-content-center d-flex">
        <h3 class="align-middle">No Courses Available</h3>
      </div>
      <% } %>
    </div>
  </div>
</section>
<!--================ End Courses Area =================-->
  <script>
    function searchProducts() {
        const searchQuery = document.getElementById('searchCourseName').value.trim().toLowerCase();
        const products = document.querySelectorAll('#courseToDisplay');

        products.forEach(product => {
            const productName = product.querySelector('h4').innerText.toLowerCase();
            if (productName.includes(searchQuery)) {
                product.style.display = 'block';
            } else {
                product.style.display = 'none';
            }
        });
    }

    document.getElementById('searchCourseName').addEventListener('input', function() {
        searchProducts();
    });
  </script>
    <%- include('./partials/footer/footer.ejs'); %>

  </body>
