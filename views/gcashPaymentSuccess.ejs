<%- include('./partials/header/header.ejs'); %>

<body>
  <%- include('./partials/navigation/nav.ejs'); %>
<style>

    .payment-success {
      margin-top: 50px;
    }
    
    .success-icon {
      width: 100px;
      height: 100px;
      margin-bottom: 20px;
    }
    
    .success-title {
      font-size: 28px;
      color: #333;
      margin-bottom: 10px;
    }
    
    .success-message {
      font-size: 18px;
      color: #666;
    }
    </style>
  <!--================Home Banner Area =================-->
  <section class="banner_area">
    <img src="/public/img/example.jpg" alt="Banner Image">
    <div class="banner_inner d-flex align-items-center">
      <div class="container">
        <div class="banner_content d-md-flex justify-content-between align-items-center">
        </div>
      </div>
    </div>
  </section>
  <!--================End Home Banner Area =================-->

  <!-- ================ Success section start ================= -->
  <section class="section_gap">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
          <div class="payment-success text-center">
            <i class="fa fa-check-square text-success mb-3" style="font-size: 80px;"></i>
            <h2 class="success-title">Payment Successful</h2>
            <p class="success-message">Your payment has been successfully processed.</p>
            <p class="success-message">Total payment of: <%= total %>.</p>
            <a href="/" class="btn btn-primary">Go to Home</a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Display other content -->
  <%- include('./partials/footer/footer.ejs'); %>

</body>
<%- include('./partials/footer/footer_js.ejs'); %>
